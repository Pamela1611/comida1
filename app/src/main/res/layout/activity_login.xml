<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="@color/fondoprincipal"
        android:gravity="center"
        android:orientation="vertical"

        android:padding="40dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:srcCompat="@drawable/comida" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:backgroundTint="@color/garcia"
            android:gravity="center"
            android:text="INICIAR SESION"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/etCorreoLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/fondo1"
            android:text="INGRESAR CORREO" />

        <EditText
            android:id="@+id/etContrasenaLogin"
            android:layout_width="200dp"

            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"

            android:background="@drawable/fondo1"
            android:text="INGRESE CONTRASEÃ‘A" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/johana"
            android:backgroundTint="@color/fondoprincipal"
            android:text="INICIAR SESION" />


        <Button
            android:id="@+id/btnIrRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/johana"

            android:text="Button" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>